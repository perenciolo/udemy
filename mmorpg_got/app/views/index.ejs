<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>MMORPG - Game of Thrones</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<script>
			$(document).ready(function () {
				$("#cadastrar").click(function () {
					window.location.href = ' /cadastro';
				});
			});
		</script>

	</head>

	<body class="body-index">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<form class="form-inline form-entrar" action="/autenticar" method="post">
					<div class="form-group <% if (validacao.length > 0) { %>has-error has-feedback <% } %>">
						<% if (validacao.length > 0) { %>
							<% for(let i = 0; i < validacao.length; i++){ %>
								<label class="control-label" for="usuario"><%= validacao[i].msg; %></label>
							<% } %>
						<% } %>
						<input type="text" class="form-control" name="usuario" id="usuario" placeholder="UsuÃ¡rio">
						<input type="password" class="form-control" name="senha" id="senha" placeholder="Senha">
						<button type="submit" class="btn btn-success">Entrar</button>
						<button type="button" id="cadastrar" class="btn btn-info">Cadastro</button>
					</div>
				</form>
			</div>
		</nav>

	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-2"></div>

	    		<div class="col-md-8">
					<img src="images/game_of_thrones_logo.jpg" />
				</div>

	    		<div class="col-md-2"></div>
		    	</div>
	    	</div>
	    </div>	
		
	</body>
</html>